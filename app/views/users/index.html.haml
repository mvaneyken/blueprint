%h1 Listing Users

%table.table.table-striped
  %thead
    %tr
      %th Email
      %th Name
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.name
        %td
          = link_to 'Show', user_path(user), :class => 'btn btn-mini'
          = link_to 'Edit', edit_user_path(user), :class => 'btn btn-mini'
          = link_to 'Destroy', user_path(user), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-mini btn-danger'

%br

= render :partial => 'shared/index_links', :locals => {:label_new => "New User", :new_path => new_user_path}

